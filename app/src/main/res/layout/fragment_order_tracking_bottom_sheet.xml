<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center|bottom"
    android:background="@color/white"
    xmlns:tools="http://schemas.android.com/tools"

    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/left_right_margin"
        android:layout_marginEnd="@dimen/left_right_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrderTrackStatusDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered to Customer"
            android:textColor="@color/black_80"
            android:textSize="@dimen/login_sign_up_tv_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderTrackDateDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 April, 2019"
            android:textColor="@color/gray_500"
            android:textSize="@dimen/login_sign_up_tv_size"
         />


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/fab_margin"
        android:layout_marginBottom="@dimen/fab_margin"
        android:background="@color/divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        tools:itemCount="3"
        android:id="@+id/rvOrderTrackDetails"
        tools:listitem="@layout/item_order_track_bottom"
        android:layout_height="wrap_content"/>

</LinearLayout>