<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/itemMainLay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/activity_horizontal_margin"
        android:background="@color/white"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:text="1"
            android:id="@+id/tvCodItemCount"
            android:textColor="@color/black"

            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:id="@+id/codOrderInfoLay"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/fab_margin"
            android:text="Sep 25, 2019"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14">

            <TextView
                android:id="@+id/tvCodOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/cod_search"
                android:drawablePadding="8dp"
                android:text="DT-3421"
                android:textColor="@color/green_color"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tvCodOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sep 25, 2019"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvCodCollectionAmount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="100dp"
            android:text="à§³ 6000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:id="@+id/tvCodPaymentStatus"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="Unpaid"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/divider"
        app:layout_constraintTop_toBottomOf="@id/itemMainLay" />


</androidx.constraintlayout.widget.ConstraintLayout>