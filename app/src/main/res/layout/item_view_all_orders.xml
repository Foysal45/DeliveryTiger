<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:paddingStart="@dimen/fab_margin"
        android:paddingEnd="@dimen/fab_margin"
        android:id="@+id/billingItemMainLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:id="@+id/tvBillingCounter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/fab_margin"
            android:text="1"
            android:textColor="@color/black"

            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:id="@+id/billingDetailsLay"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="@dimen/fab_margin"
            android:text="Sep 25, 2019"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14">

            <TextView
                android:id="@+id/tvBillingOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/cod_search"
                android:drawablePadding="8dp"
                android:text="DT-3421"
                android:textColor="@color/green_color"
                android:textSize="@dimen/text_14" />

            <TextView
                android:id="@+id/tvBillingOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sep 25, 2019"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvBillingShipmentsCharge"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:text="Himel Chowdhury\n01722486102, 01903598036\n\n23F/A, Ashkona, Dakshinkhan, Airport, Dhaka"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:id="@+id/tvBillingCODCharge"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="3-in-1 Multipurpose Screw Diver"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:id="@+id/tvBillingFragileItemCharge"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxWidth="100dp"
            android:paddingStart="8dp"
            android:text="৳ 6000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:id="@+id/tvBillingCollectionCharge"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#E8F5E9"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="৳ 6000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:id="@+id/tvBillingReturnCharge"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:maxWidth="100dp"
            android:text="৳ 6000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

        <TextView
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:id="@+id/tvBillingTotalServiceCharge"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:text="৳ 6000"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>