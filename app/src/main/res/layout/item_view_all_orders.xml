<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal">

    <LinearLayout
        android:paddingStart="@dimen/fab_margin"
        android:paddingEnd="@dimen/fab_margin"
        android:id="@+id/addOrderItemMainLay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvAllOrderCounter"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/nav_header_vertical_spacing"
            android:paddingTop="@dimen/fab_margin"
            android:paddingBottom="@dimen/fab_margin"
            android:text="1"
            android:textColor="@color/black_80"

            android:textSize="@dimen/text_14" />

        <LinearLayout
            android:paddingTop="@dimen/fab_margin"
            android:paddingEnd="8dp"
            android:paddingBottom="8dp"
            android:id="@+id/allOrderDetailsLay"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:orientation="vertical"

            android:text="Sep 25, 2019"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14">

            <TextView
                android:id="@+id/tvAllOrderOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                tools:text="DT-3421"
                android:textColor="@color/black"
                android:textSize="@dimen/text_14" />



            <TextView
                android:id="@+id/tvAllOrderOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Sep 25, 2019"
                android:textColor="@color/gray_500"
                android:textSize="@dimen/text_12" />


            <TextView
                android:id="@+id/tvAllOrderPackageInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                tools:text="package info"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="বর্তমান স্ট্যাটাস:"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />
            <TextView
                android:id="@+id/tvAllOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Status"
                android:textColor="@color/black"
                android:textSize="@dimen/text_12" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/ic_tracking_text"
                android:contentDescription="@string/cd"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tvAllOrderCustomerInfo"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingTop="@dimen/fab_margin"
            android:paddingEnd="@dimen/size_4"
            android:paddingBottom="@dimen/fab_margin"
            tools:text="Himel Chowdhury\n01722486102, 01903598036\n\n23F/A, Ashkona, Dakshinkhan, Airport, Dhaka"
            android:textColor="@color/black"
            android:textSize="@dimen/text_14" />

