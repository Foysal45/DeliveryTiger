<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    >

    <LinearLayout
        android:id="@+id/payment_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        >
        <include layout="@layout/layout_total_order_details" />
    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="none"
        app:layout_constraintTop_toBottomOf="@id/payment_details"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="64dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addOrderSecondTopLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/left_right_margin"
                android:layout_marginTop="@dimen/left_right_margin"
                android:layout_marginEnd="@dimen/left_right_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/tvCustomerDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="কাস্টমারের তথ্য"
                    android:textStyle="bold"
                    android:textColor="@color/green_color"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCustomerDetailsPageNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="১/২"
                    android:textColor="@color/green_color"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/left_right_margin"
                android:layout_marginTop="@dimen/left_right_margin"
                android:layout_marginEnd="@dimen/left_right_margin"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addOrderSecondTopLay">

                <EditText
                    android:id="@+id/etCustomerName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="কাস্টমারের নাম"
                    android:importantForAutofill="no"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/etAddOrderMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="মোবাইল নাম্বার"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/etAlternativeMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="বিকল্প মোবাইল নাম্বার"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/etDistrict"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:focusable="false"
                    android:hint="জেলা নির্বাচন করুন"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/etThana"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:focusable="false"
                    android:hint="থানা নির্বাচন করুন"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/etAriaPostOffice"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:drawableEnd="@drawable/ic_arrow_drop_down"
                    android:focusable="false"
                    android:hint="এরিয়া/পোস্ট অফিস নির্বাচন করুন"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="8dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/etCustomersAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:gravity="start|top"
                    android:hint="বিস্তারিত ঠিকানা লিখুন (বাড়ি/রোড/গ্রাম/হোল্ডিং)"
                    android:importantForAutofill="no"
                    android:minHeight="96dp"
                    android:paddingStart="16dp"
                    android:paddingTop="12dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/etAdditionalNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="এডিশনাল নোট (অপশনাল)"
                    android:importantForAutofill="no"
                    android:minHeight="@dimen/login_view_height"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />


            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/consLayGoNextPage"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingStart="24dp"
        android:paddingEnd="16dp"
        android:background="@drawable/bg_add_order_next_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:textColor="@color/white"
            android:id="@+id/tvNext"
            android:textSize="@dimen/text_14"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="পরবর্তী ধাপ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tvNext"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_right"
            android:contentDescription="@string/cd"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
