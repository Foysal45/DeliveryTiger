<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_view_shipment_delivery_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shipment_table"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black_80"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_view_shipment_delivery_price"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="5-7 days" />

    <TextView
        android:id="@+id/item_view_shipment_delivery_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_shipment_table"
        android:gravity="center"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textColor="@color/black_80"
        android:textSize="@dimen/text_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_view_shipment_delivery_time"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="30 tk" />

</androidx.constraintlayout.widget.ConstraintLayout>