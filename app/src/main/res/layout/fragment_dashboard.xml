            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/dashboard_payment_ready_layout"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#EEF8EF">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/cd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_dashboard_design_3" />


                <TextView
                    android:id="@+id/dashboard_payment_ready_price_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:textColor="#66BB6A"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    app:layout_constraintBottom_toTopOf="@id/dashboard_payment_ready_msg_tv"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed"
                    tools:text="৳ 1890" />

                <TextView
                    android:id="@+id/dashboard_payment_ready_msg_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="পেমেন্ট রেডি (০১ অক্টোবর, ২০১৯ পর্যন্ত)"
