<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="@dimen/left_right_margin"
    android:layout_marginEnd="@dimen/left_right_margin"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/fab_margin"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/order_track_check_green" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fab_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvOrderSubSubStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delivered to Customer"
            android:textColor="@color/black_80"
            android:textSize="@dimen/login_sign_up_tv_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvOrderSubSubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9 April, 2019"
            android:textColor="@color/gray_500"
            android:textSize="@dimen/login_sign_up_tv_size"
            android:textStyle="bold" />


    </LinearLayout>

</LinearLayout>