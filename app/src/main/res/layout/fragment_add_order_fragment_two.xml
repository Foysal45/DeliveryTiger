<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:clickable="true"
    android:focusable="true"
    tools:context=".ui.add_order.AddOrderFragmentTwo">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="56dp"
            >

            <include
                layout="@layout/layout_total_order_details"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/addOrderSecondTopLay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/left_right_margin"
                android:layout_marginTop="@dimen/left_right_margin"
                android:layout_marginEnd="@dimen/left_right_margin"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addOrderTopLay">

                <TextView
                    android:id="@+id/tvCustomerDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Package Collection Details"
                    android:textColor="@color/green_color"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvCustomerDetailsPageNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2/2"
                    android:textColor="@color/green_color"
                    android:textSize="@dimen/text_16"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/left_right_margin"
                android:layout_marginTop="@dimen/left_right_margin"
                android:layout_marginEnd="@dimen/left_right_margin"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/addOrderSecondTopLay">

                <EditText
                    android:id="@+id/productName"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="Product(s) name seperated by comma"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stroke_gray_corner"
                        android:gravity="center"
                        android:text="Only Delivery" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_stroke_gray_corner"
                        android:gravity="center"
                        android:text="+ Collection" />

                </LinearLayout>

                <EditText
                    android:id="@+id/collectionAmount"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="Collection Amount"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/weight"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="Weight (in kg)"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/packaging"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="Packaging"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Breakable/Fragile item "
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <EditText
                    android:id="@+id/collectionAddress"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/login_view_height"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:background="@drawable/bg_add_order_edit_text"
                    android:hint="Collection Address (Optional)"
                    android:importantForAutofill="no"
                    android:inputType="phone"
                    android:paddingStart="16dp"
                    android:paddingTop="8dp"
                    android:paddingEnd="16dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    >

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/delivery_duration_1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/delivery_duration_2"
                        app:layout_constraintBottom_toTopOf="@id/delivery_duration_3"
                        app:layout_constraintHorizontal_chainStyle="spread"
                        app:layout_constraintVertical_chainStyle="spread"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="#EFEFEF"
                            android:contentDescription="@string/cd"
                            app:srcCompat="@drawable/ic_delivery_regular"
                            />

                        <TextView
                            android:id="@+id/card_duration_1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="5-7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="days"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_duration_1" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/delivery_duration_2"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/delivery_duration_1"
                        app:layout_constraintBottom_toTopOf="@id/delivery_duration_4"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="#EFEFEF"
                            android:contentDescription="@string/cd"
                            app:srcCompat="@drawable/ic_delivery_regular" />

                        <TextView
                            android:id="@+id/card_duration_2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="5-7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="days"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_duration_2" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/delivery_duration_3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="0dp"
                        android:layout_marginEnd="5dp"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/delivery_duration_4"
                        app:layout_constraintTop_toBottomOf="@id/delivery_duration_1"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="#EFEFEF"
                            android:contentDescription="@string/cd"
                            app:srcCompat="@drawable/ic_delivery_regular" />

                        <TextView
                            android:id="@+id/card_duration_3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="5-7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="days"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_duration_3" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/delivery_duration_4"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="0dp"
                        android:layout_marginBottom="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/delivery_duration_3"
                        app:layout_constraintTop_toBottomOf="@id/delivery_duration_2"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:background="#EFEFEF"
                            android:contentDescription="@string/cd"
                            app:srcCompat="@drawable/ic_delivery_regular" />

                        <TextView
                            android:id="@+id/card_duration_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="16dp"
                            android:text="5-7"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="days"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/card_duration_4" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.appcompat.widget.AppCompatCheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="I accept terms conditions "
                    android:textColor="@color/black_80"
                    android:textSize="@dimen/text_14" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/previous_page"
        android:layout_width="64dp"
        android:layout_height="56dp"
        android:background="@drawable/bg_add_order_previous_page"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/cd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_arrow_left" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:id="@+id/consLayGoNextPage"
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:background="@drawable/bg_add_order_next_page"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="@dimen/text_14" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:contentDescription="@string/cd"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/add_order_next" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>