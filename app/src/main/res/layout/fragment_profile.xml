<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".ui.profile.ProfileFragment">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/edit_profile_toggle_group"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9CA5B4"
                android:gravity="center"
                android:paddingStart="18dp"
                app:icon="@drawable/ic_person_outline"
                app:strokeColor="#9CA5B4" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="#9CA5B4"
                android:gravity="center"
                android:paddingStart="18dp"
                app:icon="@drawable/ic_key"
                app:strokeColor="#9CA5B4"
                app:strokeWidth="1dp" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <TextView
            android:id="@+id/tvUpdateType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="ব্যক্তিগত তথ্য"
            android:textColor="@color/green_color"
            android:textSize="@dimen/text_16"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/updateInfoLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/emailPassLay">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/ivProfileImage"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:contentDescription="@string/cd"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_account_green"
                    />

                <ImageView
                    android:id="@+id/ivEditProfileImage"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginBottom="4dp"
                    android:contentDescription="@string/cd"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/ic_camera" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <EditText
                android:id="@+id/etCustomerName"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="কাস্টমারের নাম"
                android:importantForAutofill="no"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/etAddOrderMobileNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="মোবাইল নাম্বার"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/etAlternativeMobileNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="বিকল্প মোবাইল নাম্বার"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/etBikashMobileNo"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="আপনার পেমেন্ট গ্রহনের বিকাশ নম্বর"
                android:importantForAutofill="no"
                android:inputType="phone"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/etEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="ইমেইল"
                android:importantForAutofill="no"
                android:inputType="textEmailAddress"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/etProductCollectionAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/bg_add_order_edit_text"
                android:gravity="start|top"
                android:hint="আপনার পণ্য সরবরাহের ঠিকানা"
                android:importantForAutofill="no"
                android:minHeight="96dp"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/checkSmsUpdate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="SMS আপডেট (চার্জ প্রযোজ্য)"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSaveProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="সেভ"
                android:textColor="@color/white" />

        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/emailPassLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvUpdateType">

            <EditText
                android:id="@+id/etUserEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="ইমেইল"
                android:importantForAutofill="no"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/etCurrentPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="বর্তমান পাসওয়ার্ড"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <EditText
                android:id="@+id/etNewPassword"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_view_height"
                android:layout_marginTop="@dimen/fab_margin"
                android:background="@drawable/bg_add_order_edit_text"
                android:hint="নতুন পাসওয়ার্ড"
                android:importantForAutofill="no"
                android:inputType="textPassword"
                android:paddingStart="16dp"
                android:paddingTop="8dp"
                android:paddingEnd="16dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black_80"
                android:textSize="@dimen/text_14" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnUpdatePass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:text="আপডেট করুন"
                android:textColor="@color/white" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>