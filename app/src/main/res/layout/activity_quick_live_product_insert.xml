<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false"
    >
    
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_100"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:fitsSystemWindows="true"
        >
        
        <com.otaliastudios.cameraview.CameraView
            android:id="@+id/camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/black_100"
            android:keepScreenOn="true"
            app:cameraAutoFocusMarker="@string/cameraview_default_autofocus_marker"
            app:cameraGesturePinch="zoom"
            app:cameraGestureTap="autoFocus"
            
            app:cameraMode="picture"
            app:cameraPictureFormat="jpeg"
            app:cameraPictureSizeAspectRatio="1:1"
            app:cameraPictureSizeMaxHeight="512"
            app:cameraPictureSizeMaxWidth="512"
            app:cameraPictureSizeMinHeight="512"
            app:cameraPictureSizeMinWidth="512"
            app:cameraPictureSizeSmallest="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/controlLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:clipToPadding="false"
            android:background="@color/black_80"
            >
            
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/productPreviewLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_product_info"
                app:layout_constraintBottom_toTopOf="@id/uploadBtn"
                android:layout_marginBottom="12dp"
                android:paddingTop="12dp"
                android:paddingStart="8dp"
                android:paddingBottom="8dp"
                android:paddingEnd="12dp"
                android:visibility="gone"
                tools:visibility="visible"
                >
    
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:clipToPadding="false"
                    
        
                    tools:visibility="visible"
                    tools:itemCount="3"
                    tools:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_view_product_overview"
                    tools:orientation="horizontal" />
                
                
            </androidx.constraintlayout.widget.ConstraintLayout>
            
            
            <com.google.android.material.button.MaterialButton
                android:id="@+id/uploadBtn"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginBottom="12dp"
                android:text="ছবি তুলে আপলোড"
                android:textSize="14sp"
                app:backgroundTint="@color/aDheaderColor"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/galleryUploadBtn"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginEnd="6dp"
                app:icon="@drawable/ic_camera"
                app:iconSize="20dp"
                />
    
            <com.google.android.material.button.MaterialButton
                android:id="@+id/galleryUploadBtn"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_marginBottom="12dp"
                android:text="গ্যালারি থেকে নিন"
                android:textSize="14sp"
                app:backgroundTint="@color/blue"
                app:layout_constraintTop_toTopOf="@id/uploadBtn"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/uploadBtn"
                app:layout_constraintEnd_toEndOf="parent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_marginStart="6dp"
                app:icon="@drawable/ic_gallery"
                app:iconSize="20dp"
                />
            
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/uploadBtn"
                app:layout_constraintBottom_toBottomOf="@id/uploadBtn"
                app:layout_constraintEnd_toEndOf="@id/uploadBtn"
                tools:visibility="visible"
                android:elevation="4dp"
                />
    
            <ProgressBar
                android:id="@+id/progressBar1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="4dp"
                android:indeterminateTint="@color/white"
                android:visibility="gone"
                app:layout_constraintTop_toTopOf="@id/galleryUploadBtn"
                app:layout_constraintBottom_toBottomOf="@id/galleryUploadBtn"
                app:layout_constraintEnd_toEndOf="@id/galleryUploadBtn"
                tools:visibility="visible"
                android:elevation="4dp"
                />
            
        </androidx.constraintlayout.widget.ConstraintLayout>
    
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>