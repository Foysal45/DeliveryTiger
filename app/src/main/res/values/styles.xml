<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/solaiman_lipi</item>
    </style>

    <style name="launcher" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="loginActivityThem" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blur</item>
        <item name="colorPrimaryDark">@color/blur</item>
        <item name="colorAccent">@color/blur</item>
    </style>

</resources>
